/* pages/postdetails/postdetails.wxss */

.waw{
  position: fixed;
  width: 100%;
  top: 0;
  height: 100%;
  z-index: 5;
  background: rgba(0, 0, 0, 0.5);
}

swiper {
  height: 450rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}


/* 类别信息 */

.leixing .lei {
  position: relative;
  padding: 30rpx 30rpx;
  padding-left: 100rpx;
  color: #333;
  font-size: 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.leixing .lei image:nth-of-type(1) {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 50%;
  margin-top: -20rpx;
  left: 30rpx;
}

.leixing .lei image:nth-of-type(2) {
  position: absolute;
  width: 35rpx;
  height: 38rpx;
  top: 50%;
  margin-top: -19rpx;
  right: 30rpx;
}

.leixing .lei text:nth-of-type(2) {
  color: #999;
  float: right;
}

.leixing .lei:nth-of-type(1) text:nth-of-type(2),
.leixing .lei:nth-of-type(2) text:nth-of-type(2) {
  color: #ff844e;
}

.leixing .lei:nth-of-type(2) text:nth-of-type(2) {
  font-weight: 600;
}

/* 类别标题 */

.title {
  padding: 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.title text {
  background: #fef8d4;
  border: 1rpx solid #ffbe36;
  color: #ffbe36;
  border-radius: 10rpx;
  padding: 0 10rpx;
  margin-right: 15rpx;
  display:inline-block;
}
.position{
  border-bottom: 1rpx solid #f2f2f2;
}
.position .lei{
  font-size: 34rpx;
  border: 0;
}
.wenzi{
  color: #999;
  font-size: 34rpx;
  padding: 30rpx;
}
.leixing .liulan {
  border: 0;
}
.leixing .liulan image:nth-of-type(2) {
  position: absolute;
  width: 35rpx;
  height: 38rpx;
  top: 50%;
  margin-top: -17rpx;
  right: 130rpx;
}

.touxiang {
  padding: 30rpx;
  position: relative;
  border-bottom: 150rpx solid #F2F2F2;
}
.touxiang .t_top{
  width: 85%;
  height: 131rpx;
  overflow: hidden;
}
.touxiang .last{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  right: 40rpx;
  top: 50%;
  margin-top: -40rpx;
}
.touxiang image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
/* 底部 */
.foter{
  padding: 30rpx;
  height: 100rpx;
  position: relative;
}
.foter view{
   float: left; 
  display: inline-block;
  margin-right: 27rpx;
}
.foter view:nth-of-type(4){
  display: inline-block;
  margin-right: 0rpx;
}
.foter .dianhua{
    border-radius: 15rpx;
    width: 15%;
    height: 100rpx;
    position: relative;
    background: #33A1FF;
    overflow: hidden;
}
.foter .dianhua image{
  width: 100%;
  height: 100%;
}
.foter .baoming{
    border-radius: 15rpx;
    width: 29%;
    height: 100rpx;
    position: relative;
    background: #33A1FF;
    overflow: hidden;
}
.foter .baoming image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  margin-top: -20rpx;
  left: 18%;
}
.foter .baoming text{
  display: inline-block;
  line-height: 100rpx;
  margin-left: 50%;
  color: white;
}
.show{
  background: white;
  text-align: center;
  position: absolute;
  box-shadow:5px 5px 10px #ccc;
  width: 300rpx;
  height: 300rpx;
  top: -700rpx;
  left: 50%;
  margin-left: -150rpx;
}
.show image{
  position: absolute;
  top: 20%;
  left: 50%;
  margin-left: -60rpx;
  width: 120rpx;
  height: 120rpx;
}
.show text{
  line-height: 470rpx;
}

.hide{
  z-index: 10;
  text-align: center;
  color: white;
  position: fixed;
  width: 400rpx;
  height: 400rpx;
  background: white;
  border-radius: 15rpx;
  overflow: hidden;
  top: 50%;
  left: 50%;
  margin-top: -250rpx;
  margin-left: -200rpx;
}
.hide image{
   position: absolute;
  top: 10%;
  left: 50%;
  margin-left: -70rpx; 
  width: 150rpx;
  height: 150rpx;
}
.hide  .text{
  width: 100%;
  color: black;
  font-size: 30rpx;
  position: absolute;
  top: 50%;
  left: 0;
}
.hide .dibu1{
   line-height: 75rpx;
  position: absolute;
   bottom: 0;
  left: 0;
  height: 75rpx;
  width: 50%;
  background: #9AD0FF;
}
.hide .dibu2{
  line-height: 75rpx;
  position: absolute;
  bottom: 0;
  right: -25rpx;
  background: #33A1FF;
  height: 75rpx;
  width: 50%;
}

.hidden{
  text-align: center;
  color: white;
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow:5px 5px 10px #ccc;
  overflow: hidden;
  top: -700rpx;
  left: 50%;
  margin-left: -150rpx;
}
.hidden image{
   position: absolute;
  top: 15%;
  left: 50%;
  margin-left: -70rpx; 
  width: 150rpx;
  height: 150rpx;
}
.hidden  .text{
  width: 100%;
  color: black;
  font-size: 30rpx;
  position: absolute;
  top: 70%;
  left: 0;
}
.baoming2{
  color: white;
  line-height: 100rpx;
  text-align: center;
}